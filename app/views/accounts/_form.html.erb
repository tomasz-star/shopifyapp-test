<%= form_for @account, :html => { :class => "form-horizontal account" } do |f| %>

    <% if @account.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :shopify_account_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_account_url, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:shopify_account_url]) %>
  </div>
  <div class="control-group">
    <%= f.label :shopify_api_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_api_key, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:shopify_api_key]) %>
  </div>
  <div class="control-group">
    <%= f.label :shopify_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_password, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:shopify_password]) %>
  </div>
  <div class="control-group">
    <%= f.label :shopify_shared_secret, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_shared_secret, :class => 'form-control' %>
    </div>
    <%= error_span(@account[:shopify_shared_secret]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            accounts_path, :class => 'btn btn-default' %>

<% end %>
